{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "piru",
  "version": "1.0.1",
  "identifier": "app.piru.admin",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "piru",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://api.piru.app/updates/{{target}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc1MUNGQTY3NEM1MTA3N0QKUldSOUIxRk1aL29jZFVqWHpTa3d0ejZpSjhnK1RFNnNnaFRmNDZWYjF1MGhLOWtGRWdWNHltY1oK"
    }
  }
}